        .row
          .col-md-12
            %h2 Some blabla
            More blablabla
            %br
            More blabla
  - else
    .banners
      .container
        .row
          %h2= "Welcome #{current_user.first_name}!"

        .row
          Your company #{@organization.name} (#{@organization.uid}) is
          - unless @organization.oauth_uid
            not linked to any SalesForce account.
            = link_to "Link this company to SalesForce", "/auth/salesforce/request?org_uid=#{organization.uid}", class: "btn btn-warning" if is_admin?(current_user, @organization)
          - else
            linked to a SalesForce account (#{@organization.oauth_uid})

        .row
          .col-md-3
            %h3= "Last synchronization:"
          .col-md-5.center
            - if @synchronizations
              %h3.sync-status{class: @synchronizations.first.status.downcase}= "#{@synchronizations.first.updated_at} #{@synchronizations.first.status}"
            - else
              %h3 None

        -if @synchronizations
          .row
            %h2= "Synchronizations history"
            - @synchronizations.each do |sync|
              .row.sync-status{class: sync.status.downcase}
                .col-md-3
                  = sync.updated_at
                .col-md-3
                  = sync.status




