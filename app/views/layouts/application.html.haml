!!!
%html
  %head
    %title Maestrano SalesForce Connector
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .navbar.navbar-fixed-top.navbar-inverse
      .container-fluid
        .navbar-header
          %button.navbar-toggle{ type:'button', 'data-toggle'=>"collapse", 'data-target'=>"#maestrano-navbar-collapse" }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{ href:root_path }
            .mno-main-logo.hidden-xs
            .visible-xs{ style:'margin-top:20px;' } Maestrano

        .collapse.navbar-collapse#maestrano-navbar-collapse
          %ul.nav.navbar-nav
            %li
              =link_to "NoName", root_path

            %li
              =link_to "Admin", admin_index_path

          %ul.nav.navbar-nav.navbar-right
            =image_tag "logos/salesforce.png", class: 'external-logo'
    .padding-navbar

    .banners.promo.lightgray.sticky.title
      .container
        .row
          .col-md-6.col-md-offset-3
            %h2 Salesforce connector

    .wrapper
      = yield

